<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Expense</title>
    <link rel="stylesheet" href="/editForm.css" />
  </head>
  <body>
    <div class="form-container">
      <h1>Edit Expense with ID: <%= expense.id %></h1>
      <form action="/expenses/<%= expense.id %>?_method=PATCH" method="post">
        <div class="form-group">
          <label for="amount">Amount:</label>
          <input
            type="number"
            name="amount"
            id="amount"
            value="<%= expense.amount %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="category">Category:</label>
          <input
            type="text"
            name="category"
            id="category"
            value="<%= expense.category %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="date">Date:</label>
          <input
            type="date"
            name="date"
            id="date"
            value="<%= expense.date.toISOString().split('T')[0] %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="description">Description:</label>
          <textarea name="description" id="description" required>
            <%= expense.description %>
          </textarea>
        </div>

        <button type="submit" class="btn">Update Expense</button>
      </form>
    </div>
  </body>
</html>
